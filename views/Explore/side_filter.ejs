<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/Explore/sort_hostel.css">
</head>
<body>
    <div class="filters">
                <div class="filters-title">Filters</div>

                <div class="filter-section">
                    <div class="filter-header">
                        Price
                        <i class="fas fa-chevron-up filter-toggle"></i>
                    </div>
                    <div class="price-slider">
                        <div class="slider">
                            <div class="slider-track"></div>
                            <div class="slider-handle left"></div>
                            <div class="slider-handle right"></div>
                        </div>
                        <div class="price-range">
                            <div>Rs 1500</div>
                            <div>Rs 5000</div>
                        </div>
                    </div>
                </div>

                <div class="filter-section">
                    <div class="filter-header">
                        Rating
                        <i class="fas fa-chevron-up filter-toggle"></i>
                    </div>
                    <div class="rating-buttons">
                        <button class="rating-btn">0+</button>
                        <button class="rating-btn">1+</button>
                        <button class="rating-btn">2+</button>
                        <button class="rating-btn">3+</button>
                        <button class="rating-btn">4+</button>
                    </div>
                </div>

                <div class="filter-section">
                    <div class="filter-header">
                        Hostel Type:
                        <i class="fas fa-chevron-up filter-toggle"></i>
                    </div>
                    <div class="checkbox-list">
  <label class="checkbox-item">
    <input type="checkbox" name="gender" value="male">
    Boys (Student)
  </label>
  <label class="checkbox-item">
    <input type="checkbox" name="gender" value="female">
    Girls (Student)
  </label>
</div>
                </div>

                <div class="filter-section">
                    <div class="filter-header">
                        Facilities
                        <i class="fas fa-chevron-up filter-toggle"></i>
                    </div>
                    <div class="checkbox-list">
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Hot Water
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Internet & Free Wifi
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Male Warden
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Female Warden
                        </label>
                    </div>
                    <div class="more-link">+24 more</div>
                </div>

                <div class="filter-section">
                    <div class="filter-header">
                        Landmark
                        <i class="fas fa-chevron-up filter-toggle"></i>
                    </div>
                    <div class="checkbox-list">
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Boudha Area
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Samakhusi
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            Bhaktapur
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox">
                            PutaliSadak
                        </label>
                    </div>
                    <div class="more-link">+24 more</div>
                </div>
            </div>

            <div class="listings">
                <div class="listings-header">
                    <div class="listings-count">Showing 4 of <span style="color: #6a3de8;">257 places</span></div>
                    <div class="sort-dropdown">
                        Sort by <span class="sort-value">Recommended</span>
                        <i class="fas fa-chevron-down dropdown-arrow"></i>
                    </div>
                </div>

            <script>
  document.addEventListener('DOMContentLoaded', () => {
    const checkboxes = document.querySelectorAll('input[name="gender"]');

    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener('change', () => {
        const selectedGenders = Array.from(document.querySelectorAll('input[name="gender"]:checked'))
          .map(cb => cb.value);

        if (selectedGenders.length > 0) {
          const genderPath = selectedGenders.join(',');
          window.location.href = `/explore/${genderPath}`;
        } else {
          window.location.href = `/explore`; // Or redirect to show all
        }
      });
    });
  });
</script>


</html>