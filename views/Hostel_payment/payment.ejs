  <!-- Main Content -->
  <main>
    <div class="container">
      <div class="breadcrumb">
      
        <a href="#"><%= hostel.location %></a>
      </div>

      <div class="booking-details">
        <div class="booking-left">
          <h2 class="room-type"><%= hostel.roomType %></h2>

          <div class="hostel-info">
            <h3><%= hostel.name %></h3>
            <p><i class="fas fa-map-marker-alt"></i> <%= hostel.location %></p>
          </div>

          <div class="booking-dates">
            <div class="date-box">
              <h4>Check-in</h4>
              <p>Thursday, Dec 8</p>
            </div>
            <div class="date-box">
              <h4>Check-out</h4>
              <p>Sunday, Dec 10</p>
            </div>
          </div>

          <div class="verification-box">
            <h4>Verify through our agent.</h4>
            <p>Send our agents to the location prior to your visit. Get verification now!</p>
            <div class="verification-expanded">
              <h4>Details:</h4>
              <p>We send a field agent to verify the hostel and ensure it meets your expectations and comfort. This includes a small service charge.</p>
              <p><strong>Includes Extra Charges</strong></p>
              <button class="close-btn"><i class="fas fa-times"></i></button>
            </div>
          </div>
        </div>

        <div class="booking-right">
          <div class="price-tag">
            <h3>Rs 8000/<span>per week</span></h3>
          </div>

          <div class="room-image">
           <img src="<%= hostel.images[0] %>" alt="Room Image"/>

            <div class="room-caption">
              <p><%= hostel.name %></p>
              <p><%= hostel.description %></p>
            </div>
          </div>

          <p class="protection-note">Your booking is protected by us.</p>

          <div class="price-details">
            <h4>Price Details</h4>
            <div class="price-row">
              <span>Base Fare</span>
              <span>Rs 7788%></span>
            </div>
            <div class="price-row">
              <span>Verification Fee</span>
              <span>Rs 678</span>
            </div>
            <div class="price-row">
              <span>Discount</span>
              <span>Rs -800</span>
            </div>
            <div class="price-row total">
              <span>Total</span>
              <span>Rs 700</span>
            </div>
          </div>

          <form action="/process-payment" method="POST">
            <input type="hidden" name="hostelId" value="<%= hostel._id %>"/>
            <input type="hidden" name="amount" value="600"/>
            <button type="button" onclick = "document.location.href = '#'" class="payment-button">Proceed to Pay</button>
          </form>
        </div>
      </div>
    </div>
  </main>

