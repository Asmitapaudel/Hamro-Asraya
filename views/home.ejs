<body>
  <div class="container">
    <!-- Header -->
    <header>
      <div class="logo">
           <img src="images/logo.png" alt="Logo" class="logo-img">
      </div>
      <nav>
        <ul>
          <li><a href="#" class="active">Home</a></li>
          <li><a href="#">Explore</a></li>
          <li><a href="#">Rooms</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
      </nav>
      <button class="rent-now">Sign Up</button>
    </header>

    <!-- Main Content -->
    <main class = "homebody">
      <div class="hero-section">
        <div class="hero-content">
          <h2 class="brand-name nepali">आश्रय</h2>
          <h1>Find Your<br>Home Away<br>From Home</h1>
          <p>Discover trusted, affordable hostels tailored for students — where comfort, service and trust come together.</p>
        </div>
        
       

      <!-- Booking Form -->
      <div class="booking-form">
        <div class="form-group">
          <div class="icon-container">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 13C13.6569 13 15 11.6569 15 10C15 8.34315 13.6569 7 12 7C10.3431 7 9 8.34315 9 10C9 11.6569 10.3431 13 12 13Z" stroke="black" stroke-width="2"/>
