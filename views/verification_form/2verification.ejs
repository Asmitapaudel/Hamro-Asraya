<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verification Form - Step 2</title>
  <link rel="stylesheet" href="\stylesheets\verification_form\2verification.css">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="verification-container">
    <div class="verification-form">
      <header class="form-header">
        <h1>Verification Form</h1>
        <div class="progress-container">
          <div class="progress-text">Step <span class="current-step">2</span> of <span class="total-steps">3</span></div>
          <div class="progress-bar">
            <div class="progress-fill" style="width: 66.67%;"></div>
          </div>
        </div>
      </header>

      <form action = "/verify3" method = "POST">
        <div class="upload-instructions">
          <p>Please attach at least 4 pictures of your hostel.</p>
        </div>

        <div class="image-upload-grid">
          <div class="image-upload-box">
            <input type="file" id="image1" class="image-upload" accept="image/*">
            <label for="image1" class="upload-label">
              <div class="upload-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="4" y="4" width="16" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                  <path d="M4 16L8 12L12 16L20 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="18" cy="6" r="2" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
            </label>
          </div>

          <div class="image-upload-box">
            <input type="file" id="image2" class="image-upload" accept="image/*">
            <label for="image2" class="upload-label">
              <div class="upload-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="4" y="4" width="16" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                  <path d="M4 16L8 12L12 16L20 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="18" cy="6" r="2" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
            </label>
          </div>

          <div class="image-upload-box">
            <input type="file" id="image3" class="image-upload" accept="image/*">
            <label for="image3" class="upload-label">
              <div class="upload-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="4" y="4" width="16" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                  <path d="M4 16L8 12L12 16L20 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="18" cy="6" r="2" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
            </label>
          </div>

          <div class="image-upload-box">
            <input type="file" id="image4" class="image-upload" accept="image/*">
            <label for="image4" class="upload-label">
              <div class="upload-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="4" y="4" width="16" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                  <path d="M4 16L8 12L12 16L20 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="18" cy="6" r="2" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
            </label>
          </div>
        </div>

        <div class="form-actions">
          <button type="button" class="btn-cancel" onclick="window.location.href='/'">Cancel</button>
          <button type="submit" class="btn-continue">Continue</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Preview uploaded images
    document.querySelectorAll('.image-upload').forEach(input => {
      input.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function(event) {
            const uploadBox = e.target.parentElement;
            uploadBox.style.backgroundImage = `url(${event.target.result})`;
            uploadBox.classList.add('has-image');
          }
          reader.readAsDataURL(file);
        }
      });
    });
  </script>
</body>
</html>