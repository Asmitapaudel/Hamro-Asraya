            <div class="amenities">
                <div class="rating-badge">
                    <div class="rating-value">4.2</div>
                    <div class="rating-label">Verified</div>
                </div>
                <div class="amenity-item">
                    <i class="fas fa-broom amenity-icon"></i>
                    <div class="amenity-text">Clean Room</div>
                </div>
                <div class="amenity-item">
