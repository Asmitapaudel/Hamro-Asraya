<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sagun Girls Hostel - Detail Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #fff;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 20px;
        }

        .hostel-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .hostel-title {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .verified-badge {
            color: #6a3de8;
            font-size: 20px;
        }

        .hostel-location {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #666;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .location-icon {
            color: #666;
        }

        .star-rating {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 10px;
        }

        .star {
            color: #ffc107;
        }

        .rating-text {
            color: #666;
            font-size: 14px;
            margin-left: 5px;
        }

        .price-section {
            text-align: right;
        }

        .price-label {
            font-size: 12px;
            color: #666;
        }

        .price-value {
            font-size: 20px;
            font-weight: 600;
            color: #6a3de8;
        }

        .price-period {
            font-weight: normal;
        }

        .price-tax {
            font-size: 12px;
            color: #666;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .btn {
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-outline {
            border: 1px solid #ddd;
            background-color: white;
            color: #666;
        }

        .btn-primary {
            background-color: #6a3de8;
            color: white;
            border: none;
            padding: 12px 25px;
            font-weight: 600;
        }

        .gallery {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 10px;
            height: 450px;
            margin-bottom: 30px;
            position: relative;
        }

        .gallery-item {
            overflow: hidden;
            position: relative;
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        .gallery-item:first-child {
            grid-row: span 2;
        }

        .view-all-btn {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background-color: #6a3de8;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: 500;
            cursor: pointer;
            z-index: 2;
        }

        .divider {
            height: 1px;
            background-color: #eee;
            margin: 30px 0;
        }

        .section-title {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .overview-text {
            color: #555;
            margin-bottom: 30px;
            line-height: 1.7;
        }

        .amenities {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .rating-badge {
            background-color: #6a3de8;
            color: white;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
            width: 150px;
        }

        .rating-value {
            font-size: 24px;
            font-weight: 600;
        }

        .rating-label {
            font-size: 16px;
        }

        .amenity-item {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            width: 150px;
            text-align: center;
        }

        .amenity-icon {
            font-size: 24px;
            color: #333;
        }

        .amenity-text {
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>
  <div class="container">
    <div class="hostel-header">
      <div class="hostel-info">
        <div class="hostel-title">
          <%= hostel.name %>
          <% if (hostel.verified) { %>
            <i class="fas fa-check-circle verified-badge" title="Verified"></i>
          <% } %>
        </div>
        <div class="hostel-location">
          <i class="fas fa-map-marker-alt location-icon"></i>
          <%= hostel.location %>
        </div>
        <div class="star-rating">
          <% for (let i = 0; i < Math.floor(hostel.ratings); i++) { %>
            <i class="fas fa-star star"></i>
          <% } %>
          <% if (hostel.ratings % 1 >= 0.5) { %>
            <i class="fas fa-star-half-alt star"></i>
          <% } %>
          <span class="rating-text"><%= hostel.ratings %></span>
        </div>
      </div>
      <div class="price-section">
        <div class="price-label">Starting from</div>
        <div class="price-value">Rs <%= hostel.monthlyRent %><span class="price-period">/month</span></div>
        <div class="price-tax">Excl. tax</div>
        <div class="action-buttons">
          <button class="btn btn-outline"><i class="far fa-heart"></i></button>
          <button class="btn btn-outline"><i class="fas fa-share-alt"></i></button>
          <button class="btn btn-primary">Rent now</button>
        </div>
      </div>
    </div>

    <div class="gallery">
      <% hostel.images.forEach((img, index) => { %>
        <div class="gallery-item">
          <img src="<%= img %>" alt="Hostel Image <%= index + 1 %>">
        </div>
      <% }) %>
      <button class="view-all-btn">View all photos</button>
    </div>

    <div class="divider"></div>

    <div class="overview-section">
      <h2 class="section-title">Overview</h2>
      <p class="overview-text"><%= hostel.description %></p>

      <div class="amenities">
        <div class="rating-badge">
          <div class="rating-value"><%= hostel.ratings %></div>
          <% if (hostel.verified) { %><div class="rating-label">Verified</div><% } %>
        </div>

        <% hostel.facilities.forEach(facility => { %>
          <div class="amenity-item">
            <i class="fas fa-check amenity-icon"></i>
            <div class="amenity-text"><%= facility %></div>
          </div>
        <% }) %>
      </div>

      <div class="divider"></div>

      <h2 class="section-title">Room Types</h2>
      <div class="amenities">
        <% hostel.roomType.forEach(room => { %>
          <div class="amenity-item">
            <i class="fas fa-bed amenity-icon"></i>
            <div class="amenity-text"><%= room %> Room</div>
          </div>
        <% }) %>
      </div>

      <div class="divider"></div>

      <h2 class="section-title">Contact Information</h2>
      <div class="amenities">
        <div class="amenity-item">
          <i class="fas fa-user amenity-icon"></i>
          <div class="amenity-text"><%= hostel.contact.ownerName %></div>
        </div>
        <div class="amenity-item">
          <i class="fas fa-phone amenity-icon"></i>
          <div class="amenity-text"><%= hostel.contact.phone %></div>
        </div>
        <div class="amenity-item">
          <i class="fas fa-envelope amenity-icon"></i>
          <div class="amenity-text"><%= hostel.contact.email %></div>
        </div>
      </div>

      <div class="divider"></div>

      <h2 class="section-title">General Info</h2>
      <div class="amenities">
        <div class="amenity-item">
          <i class="fas fa-restroom amenity-icon"></i>
          <div class="amenity-text">Gender: <%= hostel.gender %></div>
        </div>
        <div class="amenity-item">
          <i class="fas fa-door-open amenity-icon"></i>
          <div class="amenity-text">Available Rooms: <%= hostel.availableRooms %></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>